<style>

* {
   box-sizing: border-box;
}

.row {
  width:100%;
  
  overflow:hidden;
  
  padding-left: 0;
}

img {
  width:400px;
  height: 300px;
  object-fit:cover;
  padding:20px;
}

.column {
  width:25%;
  float:left;
  height: 300px;
 }
@media screen and (min-width:1024px) {
.column {
height:293px;
}
}
@media screen and (max-width:1023px) {
  
/*   body {
    background-color:#ddf;
  } */
  
  .column {
    width:33.3%;

    object-fit:cover;
  }
  img {
    min-width: 260px;
  }

}


@media screen and (max-width:860px) {
  
/*   body {
    background-color:#cdd;
  } */
  
  .column {
    width:50%;
    height: 250px;
  }
  
}

@media screen and (max-width:536px) {
  
/*   body {
    background-color:#ded;
  } */
  
  .column {
    width:100%;
    height: 250px;
  }
  img {
    padding-top: 40px;
  }
}



</style>

<section>
      <div class="container" id="grid">
        
      
        <div class="row">
            <% @projects.each do |project| %>

       
          <div class="column" >
    
             
             <!--     <%= image_tag project.image, class: 'img-responsive', style: "width: 100%;min-width: 280px;" %> -->
         
         <%=   link_to (image_tag(project.image, class: 'img-responsive', style: "width: 100%;min-width: 280px;" )), project, remote: true %>
           </div>
            <% end %> 
      </div>
          
</section>



<script>

$(document).ready(function(){
  $('a').on('click', function(e){
    $(this).animate({opacity: 0}, 1500);
    e.preventDefault();
    $('.container').load($(this).attr('href'));
  });
});



$('img').click(function()
{
     $('img').not(this, "#header").each(function()
     {
         $(this).animate({opacity: 0}, 1500);
     });
     $(this).delay( 1500 ).fadeOut(2000).$('.container').load($(this).attr('href'));
      //load html from the url and put it in the #content element
    event.preventDefault(); // 
    
})



</script>